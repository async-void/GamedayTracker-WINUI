<Page x:Class="GamedayTracker.Views.Pages.AddPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamedayTracker.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:pages="clr-namespace:GamedayTracker.ViewModels.Pages"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance pages:AddPlayerPageViewModel,
                                 IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Height="450" Width="400"
      Title="AddPlayerPage"
      HorizontalAlignment="Left">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="4" />
            <RowDefinition Height="40" />
            <RowDefinition Height="4" />
            <RowDefinition Height="40" />
            <RowDefinition Height="4" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Add Player" 
                   Margin="0"/>

        <ui:TextBox Grid.Column="1"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Width="300"
                    Text="{Binding ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <ui:TextBox Grid.Column="1"
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Width="300"
                    Text="{Binding ViewModel.Company, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
      
        <ui:Button Grid.Column="1" 
                   Grid.Row="7"
                   Grid.ColumnSpan="2"
                   Content="SUBMIT"
                   Height="38"
                   Width="80"
                   Background="DarkCyan"
                   HorizontalAlignment="Right" 
                   Margin="0 0 10 0"
                   Command="{Binding ViewModel.SubmitCommand, Mode=OneWay}"
                   CommandParameter="Test"/>
        
    </Grid>
</Page>
